		<mapping class="model.FilmSchedule"/>
		<mapping class="model.PlayList"/>
		<mapping class="model.Question"/>
		<mapping class="model.Race"/>
        <mapping class="model.Administrator"/> 
		<mapping class="model.Answer"/> 
		
		<mapping class="z.mobile.model.MobileUser"/> 

</session-factory>
</hibernate-configuration>
